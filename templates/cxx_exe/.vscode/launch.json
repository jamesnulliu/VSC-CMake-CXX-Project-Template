{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch: [Debug|Linux-GDB]",
            "type": "cppdbg",
            "request": "launch",
            // [NOTE] Change this to path of the executable to debug
            "program": "${workspaceFolder}/build/test/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "CXX",
                    "value": "g++"
                },
            ],
            "externalConsole": false,
            "preLaunchTask": "Task: [Build|Windows-Debug]",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "gdb"
        },
