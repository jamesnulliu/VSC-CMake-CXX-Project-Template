{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Task: [Build|Debug]",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build.sh",
                "Debug",
                "--rm-build-dir"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Task: [Build|Debug-MSVC]",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                ".\\scripts\\msvc-bash.bat",
                ".\\scripts\\build.sh",
                "Debug",
                "--prune-env-path",
                "--rm-build-dir"
            ],
            "group": "build",
            "problemMatcher": []
        },
    ]
}