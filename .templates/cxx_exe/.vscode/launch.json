{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch: [Debug|GDB]",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "CC",
                    "value": "gcc"
                },
                {
                    "name": "CXX",
                    "value": "g++"
                },
            ],
            "externalConsole": false,
            "preLaunchTask": "Task: [Build|Debug]",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "gdb"
        },
        {
            "name": "Launch: [Debug|LLDB]",
