            "environment": [
                {
                    "name": "CC",
                    "value": "clang"
                },
                {
                    "name": "CXX",
                    "value": "clang++"
                },
            ],
            "externalConsole": false,
            "preLaunchTask": "Task: [Build|Debug]",
